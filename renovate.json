{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>peaceiris/renovate-config"
  ],
  "enabledManagers": [
    "docker-compose",
    "dockerfile",
    "gitlabci",
    "github-actions",
    "pip_requirements",
    "pipenv"
  ],
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch"],
      "automergeStrategy": "squash"
    }
  ]
}
